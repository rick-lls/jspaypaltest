<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title> IT store</title>
    <style>
        .flex {
            display: flex;
        }

        .horizontal {
            flex-direction: row;
        }

        .flex-1 {
            flex: 1;
        }

        .text-center {
            text-align: center;
        }

        .btn-cta {
            color: #fefefe;
            background-color: #ff1100;
            font-size: 1rem;
            border-radius: 10px;
            border: 0;
            padding: 10px 15px;
        }

        .flex-center {
            justify-content: center;
            align-items: center;
        }

        .img-main {
            width: 90%;
            max-width: 300px;
        }
    </style>
</head>

<body>
    <div>
        <h1 class="text-center">IT</h1>


        <hr />
        <br />

        <div class="flex horizontal">
            <% for(var i=0; i<products.length; i++) { %>

                <div class="flex-1">

                    <div class="flex flex-center">
                        <img src="<%= products[i].img %>" class="img-main" />
                    </div>

                    <br />
                    <h2 class="text-center">
                        <%= products[i].titulo %>
                    </h2>
                    <p class="text-center">
                        <%= products[i].descricao %>
                    </p>
                    <h3 class="text-center">Only R$ <%= products[i].preco %>
                    </h3>
                    <br />

                    <form action="/buy?id=<%= products[i].id %>" class="flex flex-center" method="POST">
                        <input type="submit" class="btn-cta" value="BUY">
                    </form>

                </div>

                <% } %>
        </div>
    </div>

    <div>
        <h3>Personal information</h3>
        <span>Name: </span><input type="text"> <br>
        <span>Email: </span><input type="text"> <br>
        <span>Phone number: </span><input type="text"> <br>
        <span>Address 1: </span><input type="text" value="1 Main St"> <br>
        <span>Address 2: </span><input type="text" value=""><br>
        <span>State or province: </span><input type="text" value="California"><br>
        <span>Zip code: </span><input type="text" value="CA 95131"><br>
        <span>Country: </span><input type="text" value="United States"> <br>

        <button>Save</button>

    </div>
</body>

</html>